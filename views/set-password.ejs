  <body class="text-center">
    <form action="/set-password" method="post" class="form-signin">

        <h1 class="h3 mb-3 font-weight-normal">Set new password</h1>

      
        <input type="email" name="username" class="form-control top" placeholder="Email address" required>
        <input type="number" name="code" class="form-control middle" placeholder="Reset code" required>
        <input type="password" class="form-control bottom" name="newpassword" placeholder="New password" required>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Set new Password</button>
        <br>


    </form>
  </body>
